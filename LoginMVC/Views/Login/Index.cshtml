
@{
    Layout = null;
}

@model LoginMVC.Models.Login
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/scss/style.scss" rel="stylesheet" />
    <link href="~/myMaterials/css/style.css" rel="stylesheet" />
    <link href="~/myMaterials/Styles/screen.css" rel="stylesheet" type="text/css" />
    <link href="~/myMaterials/Styles/resets.css" rel="stylesheet" type="text/css" />
    <link href="~/myMaterials/Themes/Client02/Styles/theme.css" rel="stylesheet" type="text/css" />

    <script src="~/myMaterials/js/jquery-1.9.1.js"></script>
    <script src="~/myMaterials/js/jquery-ui-1.10.3.custom.js"></script>
    <script src="~/myMaterials/js/jquery-ui-1.10.3.custom.min.js"></script>
    <script src="~/myMaterials/js/FutureJScript.js"></script>

    @*<script type="text/javascript">
            function preventBack() { window.history.forward(); }
            setTimeout("preventBack()", 0);
            window.onunload = function () { null };
        </script>*@
</head>
<body>
    @using (Html.BeginForm("Login", "Login"))
    {
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center wr_login">
                    <div class="col-md-6 col-lg-5">
                        <div class="login-wrap p-4 p-md-5">

                            <form action="#" class="login-form">
                                @ViewBag.Error
                                <div class="form-group">
                                    @Html.LabelFor(model => model.account.Username)
                                    @Html.TextBoxFor(model => model.account.Username, new { placeholder = "Username", @class = "form-control rounded-left" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.account.Password)
                                    @Html.PasswordFor(model => model.account.Password, new { placeholder = "Password", @class = "form-control rounded-left" })
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary rounded submit p-3 px-5">Login</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
        <script src="js/jquery.min.js"></script>
        <script src="js/popper.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script src="js/main.js"></script>

    </body>
</html>
